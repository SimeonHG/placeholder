 <html lang="en">
    <head>
      <title>Placeholder</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <%= stylesheet_link_tag "user_page.css",  :media => "all" %>
      <%= javascript_tag ("https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css") %>
      <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" %>
      <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" %>
      <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" %>
    </head>
    <body>
      <div class="bg">
        <nav class="navbar bg-dark navbar-dark">
          <a class="navbar-brand"><h3>Placeholder</h3></a>
           <button class="navbar-toggler"> <%= link_to('Logout', destroy_user_session_path, method: :delete) %> </button>
          </nav>
        <div class="container">
            <div class="col text-center">
              <br>
              <h1>Hello there, <%= @user.name %>!</h1>
            </div>
          <br>
          <br>
          <br>
          <br>
          <br>
          <div class="row">
              <div class="col-md-4">
                <div class="card">
                  <!--<img src="images_005.png" alt="user" style="width:100%">-->
                  <div class="card-body">
                    <h1><%= @user.name %></h1>
                    <p class="title"><h4>About</h4></p>
                  </div>
                </div> 
                <br>
                <br>
                <br>
              </div>
              <div class="col-md-4">
                <ol type="1" >
                    <h1>Projects list:</h1>
                    <br>
                    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#project">Create project</button>
                    <div id="project" class="modal fade" role="dialog">
                      <div class="modal-dialog modal-lg">
                       <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">New Project</h4>
                          </div>
                          <div class="modal-body">
                            <%= render 'projects/form', project: @project%>
                            <%= link_to 'Back', projects_path %>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          </div>
                        </div>
                      </div>
                    </div>  
                </ol>
              </div>
            <div class="col-md-4">
              <ol type="1">
                  <h1>Team list:</h1>
                  <br>
                  <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#team">Create Team</button>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <div class="bg">
      </div>
    </body>