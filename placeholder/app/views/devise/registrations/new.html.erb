<html lang="en">
    <head>
      <title>Placeholder</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <%= stylesheet_link_tag "signup_css.css",  :media => "all" %>
       <%= javascript_tag ("https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css") %>
      <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" %>
      <%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" %>
      <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" %>
    </head>
    <body>
      <div class="bg">
        <header>
          <div class="text-center">
            <div class="typewriter">
              <br>
              <h1> Create a Placeholder account!</h1>
            </div>
          </div>
        </header>
        <section>
          <!--
          <nav  class="nav flex-column">
              <ul class="navbar-nav">
                  <li class="nav-item">
                    <a href="/" class="previous round">&#8249;</a>
                  </li>
              </ul>
            </nav>
          -->
          <br>
          <br>
          <br>
          <br>
          <br>
          <ul style="list-style-type:none;">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <li class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"%>            
              </li>
              <br>
              <li class="field">
                <%= f.text_field :name, autocomplete: "name", placeholder: "Name"%>            
              </li>
              <br>
              <li class="field">
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password"%>            
              </li>
              <br>
              <li class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm password" %>           
                </li>
              <br>
              <div class="row">
                <div class="center-block">
                  <div class="actions">
                  <%= f.submit "Sign up" %>
                  </div>              
                </div>
              </div>
          </ul>   
        </section>
      </div>
      <footer>
        <p>Â© 2019 Simko&Ellie All Rights Reserved</p>
      </footer>
    </body>
<% end %>