<style>
	table, tr, th{
	  	border: 2px solid white;
	  	border-collapse: collapse;
	  	color: white;
	}
	tr, th{
	  padding: 5px;
	  text-align: left;
	  font-family: "Bender";
	  font-size: 25px;
	}
  h2{
    color: white;
    font-family: "Bender";
    font-size: 40px;
  }
</style>

<div class="container">
  <h2>Teams:</h2>
  <table class="table table-hover table-light">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><a href = "/teams/<%= team.id %>"><%= team.name %></a></td>
        </tr>
      <%end%> 
    </tbody>
  </table>
</div>